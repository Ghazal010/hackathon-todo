# OpenAI Configuration for Minimal Usage
# Copy this file to .env and add your API keys

# Multiple API keys separated by commas (for load balancing across accounts)
OPENAI_API_KEYS="sk-key1,sk-key2,sk-key3"

# Single API key (alternative to multiple keys)
# OPENAI_API_KEY="sk-your-single-key-here"

# Model to use (gpt-3.5-turbo is most economical)
OPENAI_MODEL="gpt-3.5-turbo"

# Creativity level (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.3

# Maximum tokens to limit costs (keep low for free tier)
OPENAI_MAX_TOKENS=150

# Rate limiting: requests per minute (adjust based on your plan)
OPENAI_RPM_LIMIT=3

# Timeout for API requests
REQUEST_TIMEOUT=10